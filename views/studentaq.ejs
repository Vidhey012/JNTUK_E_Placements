  <main class="container" >
        <h2>Add Query</h2>
        <% if (message) { %>
            <p style="color: green"><%= message %></p>
          <% } %>
        <form action="/addquery" method="post">
            <div class="input-field">
                <input type="text" name="subject" id="subject"
                    placeholder="Enter Subject" minlength="10" required>
                <div class="underline"></div>
            </div>
            <div class="input-field">
                <label style="color: rgba(0, 0, 0, 0.5);">Enter Query:</label><br>
                <textarea id="message" name="message" rows="5" cols="50" required></textarea>
            </div>            
            <input type="submit" value="Add Query">
        </form>      
    </main>
