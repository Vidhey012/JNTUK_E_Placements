  <h1 >Interview Experiences</h1>
  
  <% if (experiences.length === 0) { %>
    <p>No interview experiences have been shared yet.</p>
  <% } else { %>
    <% experiences.forEach((experience) => { %>
      <div class="abc">
        <div class="card" style="width: 25rem;">
            <div class="card-body">            
              <h2 style="text-align: center;padding-bottom: 2%;"><%= experience.name %></h2>
              <p><strong>Roll Number:</strong> <%= experience.username %></p>
              <p><strong>Company:</strong> <%= experience.company %></p>
              <p><strong>Job Role:</strong> <%= experience.jobrole %></p>
              <p><strong>Package Offered:</strong> <%= experience.salary %></p>
              <p><strong>Experiences:</strong></p>
              <% var expArr=experience.experiences.split("\n"); %>
              <% for (var i=0; i < expArr.length; i++) { %>
                <p class="rela-block grey ">
                  <%= expArr[i] %>
                </p>
                <% } %>
              
              <% if (experience.suggestions) { %>
                <p><strong>Suggestions:</strong> <%= experience.suggestions %></p>
              <% } %>
            </div>
        </div>
     </div>
    <% }); %>
  <% } %>

 
   
