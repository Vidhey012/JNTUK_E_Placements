    <main class="container">
        <h2 style="text-align: center;">Interview Experience</h2>
        <% if (message) { %>
            <p style="color: green"><%= message %></p>
          <% } %>  
        <form action="/shareexperience" method="post">
            <div class="mb-3">
                <label class="form-label">Name</label>
                <input type="text" name="name" id="name" class="form-control" placeholder="Enter Your Name" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Roll Number</label>
                <input type="text" name="username" class="form-control" id="username" placeholder="Enter Your Roll Number" required>
            </div>
            <div class="mb-3">
                <label for="company" class="form-label">Company</label>
                <input type="text" class="form-control" id="company" name="company" placeholder="Enter Company Name" required>
            </div>
            <div class="mb-3">
                <label for="jobrole" class="form-label">Jobrole</label>
                <input type="text" class="form-control" id="jobrole" name="jobrole" placeholder="Enter Jobrole of Company" required>
            </div>
            <div class="mb-3">
                <label for="salary" class="form-label">Package</label>
                <input type="text" class="form-control" id="salary" name="salary" placeholder="Enter Package Offered" required>
            </div>
            <div class="mb-3">
                <label for="experiences" class="form-label">Experiences</label>
                <textarea class="form-control" id="experiences" rows="7" name="experiences" placeholder="Share your Interview Experience" required></textarea>
            </div>
            <div class="mb-3">
                <label for="suggestions" class="form-label">Suggestions</label>
                <textarea class="form-control" id="suggestions" rows="3" name="suggestions" placeholder="Give Suggestions"></textarea>
            </div>
            <input type="submit" value="Submit">
        </form>
    </main>


