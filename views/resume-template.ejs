    <style>
        * {
            box-sizing: border-box;
            transition: 0.35s ease;
        }
        
        body {
            width: 70%;
            margin-left: 10%;
        }
        
        .rela-block {
            display: block;
            position: relative;
            margin: auto;
            top: 0px;
            bottom: 0px;
            left: 0px;
            right: 0px;
        }
        
        .rela-inline {
            display: inline-block;
            position: relative;
            margin: auto;
            top: 0px;
            bottom: 0px;
            left: 0px;
            right: 0px;
        }
        
        .floated {
            display: inline-block;
            position: relative;
            margin: false;
            top: 0px;
            bottom: 0px;
            left: 0px;
            right: 0px;
        }
        
        .abs-center {
            position: absolute;
            text-align: center;
        }
        
        body {
            font-family: 'Times New Roman', Times, serif;
            font-size: 18px;
            letter-spacing: 0px;
            background: url("http://kingofwallpapers.com/leaves/leaves-016.jpg") right no-repeat;
            background-size: cover;
        }
        
        body:before {
            content: "";
            display: false;
            position: fixed;
            margin: 0;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: rgba(255, 255, 255, 0.92);
        }
        
        .caps {
            text-transform: uppercase;
        }
        
        .justified {
            text-align: justify;
        }
        
        p.light {
            color: #777;
        }
        
        h2 {
            font-family: 'Times New Roman', Times, serif;
            font-size: 30px;
            letter-spacing: 5px;
            font-weight: 600;
            line-height: 40px;
            color: #000;
        }
        
        h3 {
            font-family: 'Times New Roman', Times, serif;
            font-size: 21px;
            letter-spacing: 1px;
            font-weight: 600;
            line-height: 20px;
            color: #000;
        }
        
        .page {
            width: 90%;
            margin: 60px auto;
            max-width: 1200px;
            background-color: #fff;
            box-shadow: 6px 10px 28px 0px rgba(0, 0, 0, 0.4);
        }
        
        .top-bar {
            height: 140px;
            background-color: #286c96;
            color: #fff;
        }
        
        .name {
            display: false;
            position: absolute;
            left: calc(350px + 5%);
            right: 0;
            bottom: 0;
            height: 100px;
            text-align: right;
            font-family: 'Times New Roman', Times, serif;
            font-size: 33px;
        }
        
        .name div {
            width: 94%;
        }
        
        .side-bar {
            display: false;
            position: absolute;
            top: 0px;
            bottom: 0px;
            margin: false;
            right: false;
            color: #fff;
            width: 350px;
            background-color: #385271;
            padding: 300px 30px 50px;
        }
        
        .mugshot {
            display: false;
            position: absolute;
            margin: false;
            top: 50px;
            left: 70px;
            right: false;
            bottom: false;
            height: 210px;
            width: 210px;
        }
        
        .mugshot .logo {
            margin: -23px;
        }
        
        .logo {
            display: false;
            position: absolute;
            margin: false;
            top: 0;
            left: 0;
            right: false;
            bottom: false;
            z-index: 100;
            margin: 0;
            color: #000;
            height: 250px;
            width: 250px;
        }
        
        .logo .logo-svg {
            height: 100%;
            width: 100%;
            stroke: #f9f4f4;
            cursor: pointer;
        }
        
        .logo .logo-text {
            display: false;
            position: absolute;
            margin: false;
            top: 58%;
            left: 0;
            right: 16%;
            bottom: 0;
            cursor: pointer;
            font-family: "Montserrat";
            font-size: 55px;
            letter-spacing: 0px;
            font-weight: 400;
            line-height: 58.333333333333336px;
        }
        
        .side-header {
            font-family: 'Open Sans';
            font-size: 18px;
            letter-spacing: 2px;
            font-weight: 600;
            line-height: 20px;
            margin: 23px auto;
            border-bottom: 1px solid #888;
            position: relative;
        }
        
        .list-thing {
            margin-bottom: 7px;
        }
        
        .content-container {
            margin-right: 0;
            width: calc(95% - 350px);
            padding: 25px 30px 50px 0px;
        }
        
        .content-container>* {
            margin: 0 auto 25px;
        }
        
        .content-container>h3 {
            margin: 0 auto 5px;
        }
        
        .content-container>p.long-margin {
            margin: 0 auto 50px;
        }
        
        .title {
            width: 80%;
            text-align: center;
        }
        
        .separator {
            width: 240px;
            height: 2px;
            background-color: #999;
        }
        
        .greyed {
            background-color: #8fbdec;
            width: 100%;
            max-width: 580px;
            text-align: center;
            font-family: 'Open Sans';
            font-size: 18px;
            letter-spacing: 3px;
            font-weight: 600;
            line-height: 27px;
        }
        
        #filter-btn {
            cursor: pointer;
            width: 200px;
            padding: 10px 10px;
            border-radius: 12px;
            display: inline-block;
            color: white;
            background: linear-gradient(45deg, #8e2de2, #4a00e0);
        }
        
        .grey {
            background-color: #888;
            width: auto;
            font-family: 'Times New Roman', Times, serif;
            font-size: 18px;
            text-align: left;
            line-height: 27px;
            border-radius: 10px;
            float: left;
            padding: 0px 5px;
            margin-bottom: 10px;
            margin-left: 5px;
        }
        
        @media screen and (max-width: 1150px) and (min-width:449px){
            .name {
                color: #fff;
                font-family:'Times New Roman', Times, serif;
                font-size: 38px;
                letter-spacing: 6px;
                font-weight: 100;
                line-height: 48px;
            }
        }
        @media screen and (max-width:450px) {
            #resume{
                width: 500%;
            }
            .name{
                letter-spacing: 3px;
                color: #fff;
                font-family:'Times New Roman', Times, serif;
                font-size: 35px;
                line-height: 48px;
            }
            
        }
    </style>
</head>

