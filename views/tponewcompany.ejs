  <main class="container" >
        <h2 style="margin-bottom: 0rem;">Add Company Details</h2>
        <% if (message) { %>
            <p style="color: green"><%= message %></p>
          <% } %>
        <form action="/tpoaddcompany" method="post">
            <div class="input-field">
                <input type="text" name="companyname" id="companyname"
                    placeholder="Enter company name" minlength="1" required>
                <div class="underline"></div>
            </div>
            <div class="input-field">
                <input type="text" name="jobrole" id="jobrole"
                    placeholder="Enter Job Role" minlength="3" required>
                <div class="underline"></div>
            </div>
            <div class="input-field">
                <input type="text" name="location" id="location"
                    placeholder="Enter Location" minlength="1" required>
                <div class="underline"></div>
            </div>
            <div class="input-field">
              
                <input type="text" name="salary" id="salary"
                    placeholder="Enter Salary" min="1" minlength="1" required>
                <div class="underline"></div>
            </div>

            <div class="input-field">
                    <input type="text" name="eligibility" id="eligibility"
                    placeholder="Enter Eligibility Criteria"  minlength="1" required>
                <div class="underline"></div>
            </div>

            <div class="input-field">
                <input type="text" name="applylink" id="applylink"
                placeholder="Enter Apply Link"  minlength="1" required>
            <div class="underline"></div>
          </div>

            <div class="input-field">
              <input type="text" name="lastdate" id="lastdate"
              placeholder="Register on or before(date,time)"  minlength="1" required>
          <div class="underline"></div>
          </div>
        
                    
            <input type="submit" value="Add Company" style="margin-top:20px;">
        </form>

       
